{
  "name": "@fer626/nekomponents",
  "version": "0.0.2",
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "description": "A modern Vue 3 component library built with TypeScript, Tailwind CSS 4, and best practices",
  "keywords": [
    "vue",
    "vue3",
    "components",
    "typescript",
    "tailwind",
    "ui",
    "library"
  ],
  "author": "Fernando A. León <fer626@github>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fer626/nekomp.git"
  },
  "bugs": {
    "url": "https://github.com/fer626/nekomp/issues"
  },
  "homepage": "https://github.com/fer626/nekomp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/@fer626"
  },
  "scripts": {
    "delete:packages": "rm -rf node_modules",
    "reset:packages": "pnpm delete:packages && pnpm install",
    "test": "echo \"⚠️  Tests not configured yet - Pipeline validation passed\"",
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "storybook:dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/vue3-vite": "^9.1.10",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "chromatic": "^13.3.0",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "nx": "21.6.4",
    "semantic-release": "^24.2.9",
    "storybook": "^9.1.10",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0"
  },
  "nx": {}
